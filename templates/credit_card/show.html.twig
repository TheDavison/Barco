{% extends 'base.html.twig' %}

{% block title %}CreditCard{% endblock %}

{% block body %}
    <h1>CreditCard</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ credit_card.id }}</td>
            </tr>
            <tr>
                <th>CreditNumber</th>
                <td>{{ credit_card.creditNumber }}</td>
            </tr>
            <tr>
                <th>CardHolder</th>
                <td>{{ credit_card.cardHolder }}</td>
            </tr>
            <tr>
                <th>ExpirationDate</th>
                <td>{{ credit_card.expirationDate ? credit_card.expirationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cvv</th>
                <td>{{ credit_card.cvv }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_credit_card_index') }}">back to list</a>

    <a href="{{ path('app_credit_card_edit', {'id': credit_card.id}) }}">edit</a>

    {{ include('credit_card/_delete_form.html.twig') }}
{% endblock %}
